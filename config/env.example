# 智能火车位置更新器配置

# =============================================================================
# 基础配置
# =============================================================================
TRAIN_API_URL=http://localhost:8000
TRAIN_DB_PATH=train_positions.db

# =============================================================================
# 更新间隔配置（秒）
# =============================================================================
# 初始化时的更新间隔（获取所有数据时使用）
INITIAL_UPDATE_INTERVAL=30

# 正常运行时的更新间隔（工作时间）
NORMAL_UPDATE_INTERVAL=60

# 深夜时的更新间隔（减少API调用）
SLOW_UPDATE_INTERVAL=300

# =============================================================================
# 时间段配置
# =============================================================================
# 高峰时段开始时间（24小时制）
PEAK_HOURS_START=6

# 高峰时段结束时间（24小时制）
PEAK_HOURS_END=22

# =============================================================================
# 数据保留配置
# =============================================================================
# 位置数据最大保留时间（小时）
MAX_POSITION_AGE_HOURS=24

# 历史记录最大数量
MAX_HISTORY_RECORDS=10000

# =============================================================================
# 性能配置
# =============================================================================
# 批量处理大小
UPDATE_BATCH_SIZE=100

# 最大并发请求数
MAX_CONCURRENT_REQUESTS=10

# =============================================================================
# 初始化配置
# =============================================================================
# 启动时是否执行完整同步
FULL_SYNC_ON_STARTUP=true

# 初始化时获取数据的时间范围（分钟）
INITIAL_DATA_AGE_MINUTES=1440

# =============================================================================
# 示例配置场景
# =============================================================================

# 开发环境（快速更新，短时间保留）
# NORMAL_UPDATE_INTERVAL=30
# SLOW_UPDATE_INTERVAL=60
# MAX_POSITION_AGE_HOURS=6

# 生产环境（平衡性能和实时性）
# NORMAL_UPDATE_INTERVAL=60
# SLOW_UPDATE_INTERVAL=300
# MAX_POSITION_AGE_HOURS=24

# 低资源环境（减少API调用）
# NORMAL_UPDATE_INTERVAL=120
# SLOW_UPDATE_INTERVAL=600
# MAX_POSITION_AGE_HOURS=12